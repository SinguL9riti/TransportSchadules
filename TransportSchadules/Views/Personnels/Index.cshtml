@model IEnumerable<TransportSchadules.Models.Personnel>

@{
    ViewData["Title"] = "Список работников";
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("Create", "Personnels")" class="btn btn-success">Добавить нового работника</a>

<!-- Форма для поиска -->
<form asp-controller="Personnels" asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchString">Поиск:</label>
        <input type="text" id="searchString" name="searchString" class="form-control" value="@Context.Request.Query["searchString"]" />
    </div>
    <button type="submit" class="btn btn-primary">Искать</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Код Работника</th>
            <th>Маршрут</th>
            <th>Дата</th>
            <th>Смена</th>
            <th>Работники</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personnel in Model)
        {
            <tr>
                <td>@personnel.PersonnelId</td>
                <td>@personnel.RouteId</td>
                <td>@personnel.Date</td>
                <td>@personnel.Shift</td>
                <td>@personnel.EmployeeList</td>
                <td>
                    <a href="@Url.Action("Details", "Personnels", new { id = personnel.PersonnelId })" class="btn btn-info">Просмотр</a>
                    <a href="@Url.Action("Edit", "Personnels", new { id = personnel.PersonnelId })" class="btn btn-warning">Редактировать</a>
                    <a href="@Url.Action("Delete", "Personnels", new { id = personnel.PersonnelId })" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

