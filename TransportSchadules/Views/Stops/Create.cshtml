@model TransportSchadules.Models.Stop
@{
    ViewData["Title"] = "Добавить остановку";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsTerminal" class="control-label">Терминал:</label>
        <input asp-for="IsTerminal" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="HasDispatcher" class="control-label">Диспетчер:</label>
        <input asp-for="HasDispatcher" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>
