@model TransportSchadules.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Расписание общественного транспорта";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4 text-center">Главная страница</h2>

    <div class="row">
        <div class="col-md-12 mb-4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Код маршрута</th>
                        <th>Маршрут</th>
                        <th>Тип транспорта</th>
                        <th>Продолжительность</th>
                        <th>Дистанция</th>
                        <th>Экспресс</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var route in Model.Routes)
                    {
                            <tr>
                                <td>@route.RouteId</td>
                                <td>@route.Name</td>
                                <td>@route.TransportType</td>
                                <td>@route.PlannedTravelTime</td>
                                <td>@route.Distance</td>
                                <td>@route.IsExpress</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Код Работника</th>
                        <th>День</th>
                        <th>Смена</th>
                        <th>Работники</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var personnel in Model.Personnels)
                    {
                            <tr>
                                <td>@personnel.PersonnelId</td>
                                <td>@personnel.Date</td>
                                <td>@personnel.Shift</td>
                                <td>@personnel.EmployeeList</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6 mb-4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Код расписания</th>
                        <th>День Недели</th>
                        <th>Время прибытия</th>
                        <th>Год</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var schedule in Model.Schedules)
                    {
                            <tr>
                                <td>@schedule.ScheduleId</td>
                                <td>@schedule.Weekday</td>
                                <td>@schedule.ArrivalTime</td>
                                <td>@schedule.Year</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-12 mb-4">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Код Остановки</th>
                    <th>Название</th>
                    <th>Конечная</th>
                    <th>Диспетчер</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stop in Model.Stops)
                {
                        <tr>
                            <td>@stop.StopId</td>
                            <td>@stop.Name</td>
                            <td>@stop.IsTerminal</td>
                            <td>@stop.HasDispatcher</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
