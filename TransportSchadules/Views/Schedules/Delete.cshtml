@model TransportSchadules.Models.Schedule

@{
    ViewData["Title"] = "Удалить расписание";
}

<h2>@ViewData["Title"]</h2>

<h3>Вы уверены, что хотите удалить это расписание?</h3>

<div>
    <h4>Расписание</h4>
    <dl class="row">
        <dt class="col-sm-2">Маршрут</dt>
        <dd class="col-sm-10">@Model.Route.Name</dd>

        <dt class="col-sm-2">День недели</dt>
        <dd class="col-sm-10">@Model.Weekday</dd>

        <dt class="col-sm-2">Время прибытия</dt>
        <dd class="col-sm-10">@Model.ArrivalTime</dd>

        <dt class="col-sm-2">Год</dt>
        <dd class="col-sm-10">@Model.Year</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ScheduleId"/>
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
